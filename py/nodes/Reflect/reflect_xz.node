import fab

title('Reflect (XZ)')

input('x0', float, 0)
input('_y', float, 0)
input('z0', float, 0)

input('shape', fab.types.Shape)
output('out', fab.shapes.reflect_xz(shape, x0, z0))

# UI
sb.ui.wireframe([
    (x0 - 0.7, _y - 1, z0 - 0.7),
    (x0 + 0.7, _y - 1, z0 + 0.7),
    (x0 + 0.7, _y + 1, z0 + 0.7),
    (x0 - 0.7, _y + 1, z0 - 0.7)], color=sb.color.teal, close=True)
sb.ui.point(x0, _y, z0, color=sb.color.teal)

